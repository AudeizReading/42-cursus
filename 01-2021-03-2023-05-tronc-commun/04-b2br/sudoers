Defaults	env_reset, log_year, log_host, logfile=/var/log/sudo/sudo.log, passwd_tries=3, requiretty
Defaults	mail_badpass, badpass_message="What The HELL are you doin' with your fuckin' password ?"
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bim"

